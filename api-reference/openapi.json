{
  "openapi": "3.1.0",
  "paths": {
    "/customers/session": {
      "post": {
        "tags": [],
        "summary": "Initialize a new session for a customer",
        "security": [
          { "site_token_secret": [] },
          { "oauth2": ["write_customers", "read_orders"] }
        ],
        "parameters": [
          {
            "name": "channel",
            "in": "query",
            "required": true,
            "schema": { "type": ["string"], "enum": ["web", "pos", "mobile"] }
          },
          {
            "name": "site_id",
            "in": "query",
            "required": true,
            "schema": { "type": ["number"] }
          },
          {
            "name": "customer_email",
            "in": "query",
            "schema": { "type": ["number"] }
          },
          {
            "name": "customer_id",
            "in": "query",
            "schema": { "type": ["number"] }
          }
        ],
        "operationId": "newSession",
        "responses": {
          "200": {
            "description": "200",
            "content": {
              "application/json": {
                "schema": {
                  "type": ["object"],
                  "properties": {
                    "customer": {
                      "type": ["object"],
                      "properties": {
                        "id": { "type": ["number"] },
                        "merchant_id": { "type": ["string"] },
                        "email": { "type": ["string", "null"] },
                        "first_name": { "type": ["string", "null"] },
                        "last_name": { "type": ["string", "null"] },
                        "points_approved": { "type": ["number"] },
                        "points_pending": { "type": ["number"] },
                        "points_spent": { "type": ["number"] },
                        "enrolled_at": { "type": ["string", "null"] },
                        "tier_membership": {
                          "type": ["object", "null"],
                          "properties": {
                            "tier": {
                              "discriminator": { "propertyName": "kind" },
                              "oneOf": [
                                {
                                  "type": ["object"],
                                  "properties": {
                                    "name": { "type": ["string"] },
                                    "position": { "type": ["number"] },
                                    "hidden": { "type": ["boolean"] },
                                    "kind": {
                                      "type": ["string"],
                                      "enum": ["boundary"]
                                    },
                                    "bounds": {
                                      "type": ["object"],
                                      "properties": {
                                        "lower": { "type": ["number"] },
                                        "upper": { "type": ["number", "null"] }
                                      },
                                      "required": ["lower", "upper"]
                                    }
                                  },
                                  "required": [
                                    "name",
                                    "position",
                                    "hidden",
                                    "kind",
                                    "bounds"
                                  ]
                                },
                                {
                                  "type": ["object"],
                                  "properties": {
                                    "name": { "type": ["string"] },
                                    "position": { "type": ["number"] },
                                    "hidden": { "type": ["boolean"] },
                                    "kind": {
                                      "type": ["string"],
                                      "enum": ["conditional"]
                                    }
                                  },
                                  "required": [
                                    "name",
                                    "position",
                                    "hidden",
                                    "kind"
                                  ]
                                }
                              ]
                            },
                            "started_at": {
                              "type": ["string"],
                              "format": "date-time"
                            },
                            "expires_at": {
                              "type": ["string", "null"],
                              "format": "date-time"
                            }
                          },
                          "required": ["tier", "started_at", "expires_at"]
                        },
                        "birthday": {
                          "type": ["string", "null"],
                          "description": "ISO timestamp representing the customer's birthday",
                          "example": "1980-03-20"
                        },
                        "next_birthday": { "type": ["string", "null"] },
                        "referral_urls": {
                          "type": ["object", "null"],
                          "properties": {
                            "direct": { "type": ["string"] },
                            "facebook": { "type": ["string"] },
                            "twitter": { "type": ["string"] },
                            "email": { "type": ["string"] },
                            "whatsapp": { "type": ["string"] },
                            "device_share": { "type": ["string"] }
                          },
                          "required": [
                            "direct",
                            "facebook",
                            "twitter",
                            "email",
                            "whatsapp",
                            "device_share"
                          ]
                        }
                      },
                      "required": [
                        "id",
                        "merchant_id",
                        "email",
                        "first_name",
                        "last_name",
                        "points_approved",
                        "points_pending",
                        "points_spent",
                        "enrolled_at",
                        "tier_membership",
                        "birthday",
                        "next_birthday",
                        "referral_urls"
                      ]
                    }
                  },
                  "required": ["customer"]
                }
              }
            }
          },
          "400": {
            "description": "400",
            "content": {
              "application/json": {
                "schema": {
                  "type": ["object"],
                  "properties": {
                    "error": {
                      "type": ["object"],
                      "properties": {
                        "message": { "type": ["string"] },
                        "details": {
                          "type": ["object"],
                          "additionalProperties": { "type": ["string"] }
                        }
                      },
                      "required": ["message"]
                    }
                  },
                  "required": ["error"]
                }
              }
            }
          },
          "401": {
            "description": "401",
            "content": {
              "application/json": {
                "schema": {
                  "type": ["object"],
                  "properties": {
                    "error": {
                      "type": ["object"],
                      "properties": {
                        "message": { "type": ["string"] },
                        "details": {
                          "type": ["object"],
                          "additionalProperties": { "type": ["string"] }
                        }
                      },
                      "required": ["message"]
                    }
                  },
                  "required": ["error"]
                }
              }
            }
          },
          "403": {
            "description": "403",
            "content": {
              "application/json": {
                "schema": {
                  "type": ["object"],
                  "properties": {
                    "error": {
                      "type": ["object"],
                      "properties": {
                        "message": { "type": ["string"] },
                        "details": {
                          "type": ["object"],
                          "additionalProperties": { "type": ["string"] }
                        }
                      },
                      "required": ["message"]
                    }
                  },
                  "required": ["error"]
                }
              }
            }
          }
        }
      }
    }
  },
  "info": { "title": "Public API", "version": "2" },
  "servers": [
    {
      "url": "https://api.loyaltylion.com/v2"
    }
  ],
  "components": {
    "securitySchemes": {
      "site_token_secret": {
        "type": "http",
        "scheme": "basic"
      },
      "oauth2": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "https://app.loyaltylion.com/oauth/authorize",
            "tokenUrl": "https://app.loyaltylion.com/oauth/access-token",
            "scopes": {
              "read_customers": "Read-only access to customers, including their points, tiers, rewards and activities. Doesn't include orders",
              "write_customers": "Read and write access to customers. Can add and remove customer points, change tiers and trigger customer activities",
              "read_orders": "Read-only access to orders",
              "write_orders": "Read and write access to orders. Can create, update and cancel orders",
              "read_unsubscribes": "Read-only access to the loyalty email unsubscribes list and unsubscribes webhook",
              "write_unsubscribes": "Read and write access to the loyalty email unsubscribes list. Can add emails to the list"
            }
          }
        }
      }
    }
  }
}
